#!/usr/bin/env python3

import sys
import os

FORMAT = ' --pretty=format:"%H#%P#%s"'

commits = {}
root = None

class Commit:
    def __init__(self, c_hash, p_hash, msg, branch):
        if c_hash in commits:
            return
        self.c_hash = c_hash
        self.p_hash = p_hash
        self.msg = msg
        self.branch = branch
        self.child = []
        commits[c_hash] = self

def parse_commit(log, ref):
    for commit in log.split('\n'):
        if len(commit) is 0:
            continue
        if commit.find('##') == 40:
            p_hash = None
            msg = commit[42:]
        else:
            p_hash = commit[41:][:40]
            msg = commit[82:]
        c_hash = commit[:40]
        Commit(c_hash, p_hash, msg, ref)

def build_tree():
    for commit in commits.values():
        if commit.p_hash == None:
            global root
            root = commit
        else:
            commits[commit.p_hash].child.append(commit.c_hash)

def check(commit):
    if commit.msg != 'Initial commit':
        return False
    if len(commit.child) != 2:
        return False
    child1 = commits[commit.child[0]]
    child2 = commits[commit.child[1]]
    if child1.branch != 'refs/heads/fix':
        return False
    if child2.branch != 'refs/heads/master':
        return False
    if len(child1.child) != len(child2.child) or len(child1.child) != 1:
        return False
    if child1.child[0] != child2.child[0]:
        return False
    return len(commits[commit.child1[0]].child) == 0

def printOutput(msg):
    print('/' + ('-' * 40) + '\\')
    print('|' + (' ' * 40) + '|')
    l = 40 - len(msg)
    ll = l // 2
    lr = l // 2
    if l % 2 == 1:
        ll += 1
    print('|' + (' ' * ll) + msg + (' ' * lr) + '|')
    print('|' + (' ' * 40) + '|')
    print('\\' + ('-' * 40) + '/')

    
branchs = sys.stdin.read().split('\n')
for branch in branchs[:-1]:
    oldrev, newrev, refname = branch.split(' ')
    if oldrev == ('0' * 40):
        oldrev = ''
    else:
        oldrev += '..'
    parse_commit(os.popen('git log ' + oldrev + newrev + FORMAT).read(), refname)
    parse_commit(os.popen('git log' + FORMAT).read(), refname)

build_tree()
if check(root):
    printOutput('flag = TO DO')
else:
    printOutput('Soumission refus√©e, try again !')

sys.exit(1)
